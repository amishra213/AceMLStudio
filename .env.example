# AceML Studio - Environment Variables Example
# ==============================================
# Copy this file to .env and fill in your actual values
# Docker Compose will automatically load these variables

# ═══════════════════════════════════════════════════════════════════
#  Application Settings
# ═══════════════════════════════════════════════════════════════════
SECRET_KEY=your-secret-key-change-in-production
DEBUG=False

# ═══════════════════════════════════════════════════════════════════
#  LLM Configuration
# ═══════════════════════════════════════════════════════════════════
# Supported providers: openai, azure_openai, anthropic, deepseek
LLM_PROVIDER=deepseek

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2048
OPENAI_TEMPERATURE=0.3

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_KEY=
AZURE_OPENAI_DEPLOYMENT=
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Anthropic (Claude)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# DeepSeek
DEEPSEEK_API_KEY=
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MAX_TOKENS=2048
DEEPSEEK_TEMPERATURE=0.3

# ═══════════════════════════════════════════════════════════════════
#  File Upload Configuration
# ═══════════════════════════════════════════════════════════════════
MAX_FILE_UPLOAD_SIZE_MB=256
CHUNK_SIZE_MB=5
LARGE_FILE_THRESHOLD_MB=50
USE_DB_FOR_LARGE_FILES=True
DB_FALLBACK_THRESHOLD_MB=500

# ═══════════════════════════════════════════════════════════════════
#  Cloud GPU Configuration
# ═══════════════════════════════════════════════════════════════════
CLOUD_GPU_ENABLED=False
CLOUD_GPU_PROVIDER=aws_sagemaker

# AWS SageMaker
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SAGEMAKER_ROLE_ARN=
AWS_SAGEMAKER_INSTANCE_TYPE=ml.p3.2xlarge
AWS_SAGEMAKER_S3_BUCKET=

# Azure ML
AZURE_SUBSCRIPTION_ID=
AZURE_RESOURCE_GROUP=
AZURE_WORKSPACE_NAME=
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_COMPUTE_TARGET=gpu-cluster
AZURE_VM_SIZE=Standard_NC6

# GCP Vertex AI
GCP_PROJECT_ID=
GCP_REGION=us-central1
GCP_SERVICE_ACCOUNT_KEY_PATH=
GCP_MACHINE_TYPE=n1-standard-4
GCP_ACCELERATOR_TYPE=NVIDIA_TESLA_T4
GCP_ACCELERATOR_COUNT=1

# Custom GPU Server
CUSTOM_GPU_ENDPOINT=
CUSTOM_GPU_API_KEY=
CUSTOM_GPU_AUTH_TOKEN=
CUSTOM_GPU_USERNAME=
CUSTOM_GPU_PASSWORD=

# GPU Training Options
GPU_JOB_TIMEOUT=3600
GPU_FALLBACK_TO_LOCAL=True
GPU_MAX_RETRIES=3
